.container.text-right
  button.btn.btn-success(ngf-select, ngf-multiple='true', ng-disabled='uploading', ngf-change='upload($files)') #[i.fa.fa-4x.fa-spinner.fa-pulse(ng-show='uploading')] Загрузить

.container
  table.table
    thead
      th Preview
      th Filename
      th Content-type
      th Size
    tbody
      tr(ng-repeat='file in attachments')
        td: img.attachment-preview(ng-src='{{ file.thumb }}')
        td: a(ng-href='{{ file.href }}', target='_blank') {{ file.name }}
        td {{ file.type }}
        td {{ file.size }}
