    link(rel='stylesheet', href='/bower_components/ng-table/dist/ng-table.min.css')
    link(rel='stylesheet', href='/bower_components/bootstrap-markdown/css/bootstrap-markdown.min.css')

    script(src='/bower_components/pouchdb/dist/pouchdb.min.js')
